int main() {
    int choice;
    string subject = "";

    do {
        cout << "\nMenu: \n"
            << "1. Semester 1 (PF, ICT)\n"
            << "2. Semester 2 (OOP)\n"
            << "3. Semester 3 (DSA, DS, COAL)\n"
            << "4. Semester 4 (OS, DB)\n"
            << "5. Semester 5 (SE, WD)\n"
            << "6. Semester 6 (CN, MAD)\n"
            << "7. Semester 7 (ST, AI)\n"
            << "8. Semester 8 (CP, EC)\n"
            << "9. Exit\n"
            << "Enter Choice (1 - 9): ";
        cin >> choice;
        cout << "Enter Subject: ";
        cin >> subject;

        switch (choice) {
        case 1:
            sem1(subject);
            break;
        case 2:
            sem2(subject);
            break;
        case 3:
            sem3(subject);
            break;
        case 4:
            sem4(subject);
            break;
        case 5:
            sem5(subject);
            break;
        case 6:
            sem6(subject);
            break;
        case 7:
            sem7(subject);
            break;
        case 8:
            sem8(subject);
            break;
        case 9:
            cout << "Exiting...\n";
            break;
        default:
            cout << "\nInvalid Input! Please Enter a Valid Choice!\n\n";
        }
    } while (choice != 9);

    system("Pause");
    return 0;
}
