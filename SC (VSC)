#include<iostream>
#include<windows.h>
using namespace std;

////////////////// Semester 1 //////////////////////////
void sem1(string subject) {
    if (subject == "PF") {
        const wchar_t* pf1 = L"https://drive.google.com/drive/folders/1WFbB33MDYV9ooz92zr1_bffhEb8Pye1_";
        ShellExecuteW(0, 0, pf1, 0, 0, SW_SHOW);
        cout << "Successfully Opened " << subject << " Google Drive " << endl;
    }
    else if (subject == "ICT") {
        const wchar_t* ict1 = L"https://drive.google.com/drive/folders/1yPk8VZbbB731S27JjBArGthtsJ89CiRS";
        ShellExecuteW(0, 0, ict1, 0, 0, SW_SHOW);
        cout << "Successfully Opened " << subject << " Google Drive " << endl;
    }
    else {
        cout << "\nError: This Computing Subject is Not in 1st Semester!\n\n";
    }
}

