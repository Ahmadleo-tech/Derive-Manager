int main() {
    int choice;
    string subject = "";

    do {
        cout << "\nMenu: \n"
             << "1. Semester 1 (PF, ICT)\n"
             << "2. Semester 2 (OOP)\n"
             << "3. Semester 3 (DSA, DS, COAL)\n"
             << "4. Semester 4 (OS, DB)\n"
             << "5. Semester 5 (SE, WD)\n"
             << "6. Semester 6 (CN, MAD)\n"
             << "7. Semester 7 (ST, AI)\n"
             << "8. Semester 8 (CP, EC)\n"
             << "9. Exit\n"
             << "Enter Choice (1 - 9): ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Enter Subject Name for Semester 1: ";
                cin >> subject;
                sem1(subject);
                break;
            case 2:
                cout << "Enter Subject Name for Semester 2: ";
                cin >> subject;
                sem2(subject);
                
                break;
            case 3:
                cout << "Enter Subject Name for Semester 3: ";
                cin >> subject;
                sem3(subject);
                break;
            case 4:
                cout << "Enter Subject Name for Semester 4: ";
                cin >> subject;
                sem4(subject);
                break;
            case 5:
                cout << "Enter Subject Name for Semester 5: ";
                cin >> subject;
                sem5(subject);
                break;
            case 6:
                cout << "Enter Subject Name for Semester 6: ";
                cin >> subject;
                sem6(subject);
                break;
            case 7:
                cout << "Enter Subject Name for Semester 7: ";
                cin >> subject;
                sem7(subject);
                break;
            case 8:
                cout << "Enter Subject Name for Semester 8: ";
                cin >> subject;
                sem8(subject);
                break;
            case 9:
                cout << "Exiting...\n";
                break;
            default:
                cout << "Invalid choice! Please enter a number between 1 and 9.\n";
        }

    } while (choice != 9);

    system("pause");
    return 0;
}
