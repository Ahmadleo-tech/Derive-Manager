#include<iostream>
#include<windows.h>
using namespace std;

////////////////// Semester 1 //////////////////////////
void sem1(string subject) {
    if (subject == "PF") {
        const char* pf1 = "Link of PF";
        ShellExecute(0, 0, pf1, 0, 0, SW_SHOW);
        cout<<"SucessFuly Opened "<<subject<<" Google Derive "<<endl;
    } else if (subject == "ICT") {
        const char* ict1 = "Link of ICT";
        ShellExecute(0, 0, ict1, 0, 0, SW_SHOW);
         cout<<"SucessFuly Opened "<<subject<<" Google Derive "<<endl;
    } else {
        cout << "\nError: This Computing Subject is Not in 1st Semester!\n\n";
    }
}

